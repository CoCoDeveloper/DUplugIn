<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cocodev.myapplication.HOME">

    <!-- TODO: Update blank fragment layout -->

    <!-- TITLE BACKGROUND-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Latest News"
                android:id="@+id/latestnews"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:padding="8dp"
                android:background="@color/title_background"
                android:textColor="#fff" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:id="@+id/imageView2"
                android:background="#716f6f" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/title_collegeUpdates"
                android:id="@+id/title_collegeUpdates"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:padding="8dp"
                android:background="@color/title_background"
                android:textColor="#fff" />

            <GridView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/article_collegeupdates_gridView"
                android:padding="5dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView2"
                android:numColumns="auto_fit"
                android:background="#f2f0f0"
                android:verticalSpacing="6dp"
                android:horizontalSpacing="6dp"
                android:stretchMode="columnWidth"
                android:smoothScrollbar="true"
                android:nestedScrollingEnabled="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/title_universityUpdates"
                android:id="@+id/title_universityUpdates"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:padding="8dp"
                android:background="@color/title_background"
                android:textColor="#fff" />

            <GridView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/article_universityupdates_gridView"
                android:padding="5dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView2"
                android:numColumns="auto_fit"
                android:background="#f2f0f0"
                android:verticalSpacing="6dp"
                android:horizontalSpacing="6dp"
                android:stretchMode="columnWidth"
                android:smoothScrollbar="true"
                android:nestedScrollingEnabled="true"/>
        </LinearLayout>

    </ScrollView>



</RelativeLayout>


