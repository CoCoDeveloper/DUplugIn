<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cocodev.myapplication.notices.collegeNotices">

    <TextView
        android:id="@+id/title_collegeNotices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/listview_classnotices"
        android:layout_below="@+id/listview_classnotices"
        android:text="College Notices"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listview_collegeNotices"
        android:layout_below="@+id/title_collegeNotices"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignStart="@+id/listview_classnotices"/>
</RelativeLayout>
